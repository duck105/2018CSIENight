<% events.each do |event| %>
  <section class="evt_nav_section" id="<%= render_anchor(event) %>">
    <div class="evt_img-container">
      <%= image_tag(event.image_url.to_s, class: "evt_img") %>
    </div>
    <div class="evt_content">
      <div class="evt_inner">
        <header>
          <h3><%= event.title %></h3>
        </header>
        <p>
          <%= event.introduction.html_safe %>
        </p>
      </div>
    </div>
  </section>
<% end %>