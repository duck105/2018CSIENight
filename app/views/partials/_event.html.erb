<div class="tab-pane fade show active" id=<%= "nav-#{type}" %> role="tabpanel" aria-labelledby=<%= "nav-#{type}-tab" %>>
  <section class="spotlights">
    <% events.each do |event| %>
      <section>
        <%= image_tag(event.image_url.to_s, class: "image") %>
        <div class="content">
          <div class="inner">
            <header class="major">
              <h3><%= event.title %></h3>
            </header>
            <p>
              <%= event.introduction.html_safe %>
            </p>
          </div>
        </div>
      </section>
    <% end %>
  </section>
</div>