<header class="text-center">
  <%= image_tag((current_user.avatar.small), class: "img-fluid", style: "height:240px;width:auto") %>
  <h3 class="mt-3">Edit Your Account</h3>
</header>
<div class="container mt-2">
  <div class="row">
    <div class="col-lg-4 col-sm-1"></div>
    <%= form_for(resource, as: resource_name, url: user_registration_path, method: :put, html: {class: 'col-lg-4 col-sm-10 text-center'}, data: {remote: false}) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :current_password, "Current Password" %>
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", id: "exampleInputPassword1",placeholder: "Password" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "New Password" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", id:"exampleInputPassword1", placeholder: "#{@minimum_password_length} 字元以上, 不想改請留白" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation , "Confirm New Password" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "exampleInputPassword1", :maxlength => "256", :placeholder => "Enter new password again", :type => "password" %>
      </div>
      <div class="form-group">
        <%= f.label :jobs, "稱謂" %>
        <%= f.text_field :jobs, class: "form-control", id: "exampleInputPassword1" %>
      </div>
      <div class="form-group">
        <%= f.label :motto, "想說的話" %>
        <%= f.text_field :motto, class: "form-control", id: "exampleInputPassword1" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, "大頭貼" %>
        <%= f.file_field :avatar, class: "form-control", id: "exampleInputPassword1" %>
      </div>
      <%= f.submit "Save changes" , class: "btn btn-primary mt-3", style: "width:100%" %> 
    <% end %>
    <div class="col-lg-4 col-sm-1"><%= link_to "登出", destroy_user_session_path, :method => :delete ,:class => "header_navlink w-nav-link"%></div>

  </div>
</div>
