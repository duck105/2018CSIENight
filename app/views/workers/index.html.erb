<!-- for small device -->
<div class="d-lg-none d-xl-none small-device">
  <center>
    <div id="carousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @events.each do |event| %>
          <div class="carousel-item <% if event == @events.first %><%= "active" %><% end %>">
          <button type="button" class="btn btn-link text-left" data-toggle="collapse" data-target="#d<%= event.id %>" aria-expanded="false" aria-controls="d<% event.id %>">
          <img class="d-block h-20" src="<%= image_url(event.image) %>" alt="<%= event.title %>照片">
          </button>
        </div>
        <% end %>
        <% @departments.each do |department| %>
        <div class="carousel-item">
          <button type="button" class="btn btn-link text-left" data-toggle="collapse" data-target="#D<%= department.id %>" aria-expanded="false" aria-controls="D<% department.id %>">
          <button type="button" class="btn btn-link text-left" data-toggle="collapse" data-target="#D<%= department.id %>" aria-expanded="false" aria-controls="D<% department.id %>">
          <img class="d-block h-20" src="<%= image_url(department.image) %>" alt="召部照">
          </button>
        </div>
        <% end %>
      </div>
    </div>
  </center>

  <div id="work">
  <% @departments.each do |department| %>
    <div id="C<%= department.id %>" class="card">
      <button type="button" class="btn btn-link text-left collapsed" data-toggle="collapse" data-target="#D<%= department.id %>" aria-expanded="false" aria-controls="D<%= department.id %>">
        <div class="card-header" id="L<%= department.id %>">
          <span class="rightarrow">&#9656;&nbsp; </span>
          <span class="downarrow">&#9662;&nbsp;</span>
          <%= department.name %>
        </div>
      </button>
      <div id="D<%= department.id %>" class="collapse" aria-labelledby="C<%= department.id %>">
        <div class="card-body">
          <adj>
          <div> <div class="row">
          <% department.users.each do |user| %>
            <div >
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#M<%= user.id %>">
                <% if user.avatar.blank? %>
                  <img src="img/thumb_sticker.png" class="pic small-picheight">
                <% else %>
                  <img src="<%= image_url(user.avatar.thumb) %>" class="pic small-picheight">
                <% end %>  
                <br>
              <name><%= user.name %></name>
              </button>
            </div>
          <% end %>
          </div> </div>
          </adj>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  
  <div id="show">
  <% @events.each do |event| %>
    <div id="c<%= event.id %>" class="card">
      <button type="button" class="btn btn-link text-left collapsed" data-toggle="collapse" data-target="#d<%= event.id %>" aria-expanded="false" aria-controls="d<%= event.id %>">
        <div class="card-header" id="l<%= event.id %>">
          <span class="rightarrow">&#9656;&nbsp; </span>
          <span class="downarrow">&#9662;&nbsp;</span>
          <%= event.title %>
        </div>
      </button>
      <div id="d<%= event.id %>" class="collapse" aria-labelledby="c<%= event.id %>">
        <div class="card-body">
          <adj>
          <div> <div class="row">
          <% event.users.each do |user| %>
            <div >
              <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#M<%= user.id %>">
              <% if user.avatar.blank? %>
                <img src="../img/thumb_sticker.png" class="pic small-picheight">
              <% else %>
                <%= image_tag((user.avatar.thumb), class: "pic small-picheight") %>
              <% end %>  
              <br>
              <name><%= user.name %></name>
              </button>
            </div>
          <% end %>
          </div> </div>
          </adj>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

