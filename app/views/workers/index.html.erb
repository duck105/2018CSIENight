<!-- namecards -->

<% @users.each do |user| %>
<div id="M<%= user.id %>" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <div class="row">
         <div class="col-lg-6 col-md-12">
            <% if user.avatar.blank? %>
              <img src="../img/sticker.png" class="pic large-picheight">                   
            <% else %>
              <img src="<%= image_url(user.avatar.small) %>" class="pic large-picheight">
            <% end %>  
         </div>
         <div class="col-lg-6 col-md-12 align-self-end">
           <div class="modal-title">
             <div class="row">
                <div class="col-lg-12 col-md-4">
                  <h4><%= user.jobs %></h3>
                  <h1><%= user.name %></h1>
                </div>
                <div class="col-lg-12 col-md-8 align-self-center">
                  <% user.events.each do |event| %>
                    <span class="badge badge-warning" style="font-size:20px"><%= event.title %></span>
                  <% end %>
                  <% if user.department.present? %>
                    <span class="badge badge-success" style="font-size:20px"><%= user.department.name %></span>
                  <% end %>
                </div>
             </div>
             <hr>
             <p style="font-size:30px">
                <%= render_motto(user) %> 
             </p>
           </div>
         </div>
        </div>
      </div>
    <div class="modal-footer">
      <button type="button" class="btn" data-dismiss="modal">關閉</button>
    </div>
    </div>
  </div>
</div>
<% end %>
